export TIME_STYLE=long-iso
alias ll="exa -lh --git"

if test -d /opt/homebrew/bin; then
    PATH="/opt/homebrew/bin:$PATH"
fi

if test -e ~/.nix-profile/etc/profile.d/nix.sh; then
    . ~/.nix-profile/etc/profile.d/nix.sh
fi

if test -d "$HOME/System"; then
    PATH="$HOME/System/bin:$PATH"
    MANPATH="$HOME/System/share/man:$MANPATH"
fi

if test -d "$HOME/.local/bin"; then
    PATH="$HOME/.local/bin:$PATH"
    LD_LIBRARY_PATH="$HOME/.local/lib"
    MANPATH="$HOME/.local/share/man:$MANPATH"
fi

if test -d ~/.composer/vendor/bin; then
    PATH=~/.composer/vendor/bin:"$PATH"
fi

if test -d /usr/pkg/bin; then
    PATH="/usr/pkg/sbin:/usr/pkg/bin:$PATH"
    MANPATH="/usr/pkg/man:$MANPATH"
fi

if test -d ~/Library/node/bin; then
    PATH=~/Library/node/bin:"$PATH"
fi

if test -d ~/Library/Perl/5/lib/perl5/; then
    eval $(perl -I ~/Library/Perl/5/lib/perl5/ -Mlocal::lib)
fi

if test -d "$HOME/.local/opt/plan9"; then
    PLAN9="$HOME/.local/opt/plan9"
    PATH="$PATH:$PLAN9/bin"
    export PLAN9
elif test -d /usr/local/plan9; then
    PLAN9=/usr/local/plan9
    PATH=$PATH:$PLAN9/bin
    export PLAN9
fi

if test -d ~/.cargo/bin; then
    PATH="$HOME/.cargo/bin:$PATH"
fi

if test -d ~/Library/Python/3.7/bin; then
    PATH="$HOME/Library/Python/3.7/bin:$PATH"
fi

if which brew >/dev/null 2>&1; then
    PATH="$(brew --prefix)/bin:$(brew --prefix)/sbin:$PATH"
fi

if test -r ~/.profile.local; then
    . ~/.profile.local
fi

if which systemctl 2>/dev/null >/dev/null; then
    systemctl --user import-environment PATH
fi

if which vim 2>/dev/null >/dev/null; then
    VISUAL=vim
elif which vis 2>/dev/null >/dev/null; then
    VISUAL=vis
elif which vi 2>/dev/null >/dev/null; then
    VISUAL=vi
fi
export VISUAL

if test -d ~/Library/pnpm; then
    PNPM_HOME="$HOME/Library/pnpm"
    PATH="$PNPM_HOME:$PATH"
    export PNPM_HOME
elif test -d ~/.local/share/pnpm; then
    PNPM_HOME="$HOME/.local/share/pnpm"
    PATH="$PNPM_HOME:$PATH"
    export PNPM_HOME
fi

if test -d "$HOME/Library/Python/3.12/bin"; then
    PATH="$HOME/Library/Python/3.12/bin:$PATH"
fi

if [ -f "$HOME/.cargo/env" ]; then
    . "$HOME/.cargo/env"
fi

if [ -d "$HOME/.cargo/bin" ]; then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

if [ -S "$SSH_AUTH_SOCK" ]; then
    ln -sf "$SSH_AUTH_SOCK" "$HOME/.ssh/last-auth.sock"
fi

if [ -f "$HOME/.nix-profile/etc/profile.d/hm-session-vars.sh" ]; then
    source "$HOME/.nix-profile/etc/profile.d/hm-session-vars.sh"
fi

export LD_LIBRARY_PATH
export MANPATH

GRAB_HOME="$HOME/Projects/"
export GRAB_HOME

if [ -d "$HOME/Library/Application Support/Coursier/bin" ]; then
    export PATH="$PATH:$HOME/Library/Application Support/Coursier/bin"
fi

if [ -d "$HOME/.local/share/coursier/bin" ]; then
    export PATH="$PATH:$HOME/.local/share/coursier/bin"
fi

if which cs > /dev/null; then
    export JAVA_HOME="$(cs java-home)"
fi

if [ -n "$JAVA_HOME" -a -d "$JAVA_HOME/bin" ]; then
    export PATH="$JAVA_HOME/bin:$PATH"
fi

if [ -e "$HOME/.1password/agent.sock" ]; then
    export SSH_AUTH_SOCK="$HOME/.1password/agent.sock"
fi
